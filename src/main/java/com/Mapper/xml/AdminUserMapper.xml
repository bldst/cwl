<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.Mapper.AdminUserMapper">
    <update id="updateTokenUser">
        update AdminUser
        set token=#{token},
            Lastlogintime=#{Lastlogintime}
        where id = #{id}
    </update>
<!--根据id修改信息-->
    <update id="updateUserByid">
        update User
        <set>
            <if test="psd !=null">
                psd=#{psd},
            </if>

            <if test="account !=null">
                account=#{account},
            </if>

        </set>
        where id=#{id}
    </update>

    <select id="login" resultType="java.lang.String">
        select id
        from AdminUser
        where psd = #{psd}
          and account = #{account}

    </select>
    <select id="getAllPages" resultType="com.entiy.User">
        select *
        from User

    </select>
</mapper>


